PREPARE_TARGETS += prepare.libplatform
PREPARE_URL_libplatform = wf@allinone.io:alpine/libplatform.git
PREPARE_DIR_libplatform = $(DEPENDS_LIBRARY_PATH)/$(basename $(notdir $(PREPARE_URL_libplatform)))
prepare.libplatform:
	-git clone $(PREPARE_URL_libplatform) $(PREPARE_DIR_libplatform)
	-echo "SUPER_MAKE_DIR=${MAKE_FILE_DIR}"                >> $(PREPARE_DIR_libplatform)/.make/super
	-echo "SUPER_MAKE_CONFIG_DIR=${MAKE_CONFIG_DIR}"       >> $(PREPARE_DIR_libplatform)/.make/super
	-cd $(PREPARE_DIR_libplatform) && make prepare
	-rm $(PREPARE_DIR_libplatform)/.make/super
